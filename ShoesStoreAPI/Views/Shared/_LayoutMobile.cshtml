<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShoesStoreAPI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShoesStoreAPI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
     <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="HomePage">TuShoes</a>
                <div>
                    <form style="margin: auto;" class="form-outline" method="get" asp-controller="Home" asp-action="ProductsPage">
                        <input style="display: inline;" name="query" type="search" placeholder="Tìm kiếm sản phẩm">
                        <button type="submit" style="display: inline;">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="HomePage">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Home">Các sản phẩm</a>
                        </li>
                        @if (ViewBag.UserRole == "Seller")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Seller/Create">Thêm sản phẩm</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Seller/Orders">Danh sách đơn hàng</a>
                            </li>
                        }
                        @if (ViewBag.UserID == "" || ViewBag.UserID == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
                                    <i class="fa-solid fa-cart-shopping" style="font-size: 20px"></i>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Cart">
                                <i class="fa-solid fa-cart-shopping" style="font-size: 20px"></i>
                            </a>
                            </li>
                        }
                        <li class="nav-item" style="z-index:1">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                </div>   
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top ">
        <div class="container">
            <div class="row">
                <div class="col-6 p-1">
                    <ul class="footer_list">
                        <li style="font-weight:700">Chăm sóc khách hàng</li>
                        <li>Trung tâm hỗ trợ</li>
                        <li>Shop Mail</li>
                        <li>Hướng dẫn mua hàng</li>
                    </ul>
                </div>
                <div class="col-6 p-1">
                    <ul class="footer_list">
                        <li style="font-weight:700">Giới thiệu</li>
                        <li>Giới thiệu</li>
                        <li>Tuyển dụng</li>
                        <li>Điều khoản</li>
                    </ul>
                </div>
                <div class="col-6 p-1">
                    <ul class="footer_list">
                        <li style="font-weight:700">Danh mục</li>
                        <li>Giày</li>
                        <li>Quần áo</li>
                        <li>Các sản phẩm khác</li>
                    </ul>
                </div>
                <div class="col-6 p-1">
                    <ul class="footer_list">
                        <li style="font-weight:700">Theo dõi</li>
                        <li><i class="fa-brands fa-facebook"></i> Facebook</li>
                        <li><i class="fa-brands fa-instagram"></i> Instagram</li>
                        <li><i class="fa-brands fa-linkedin"></i> Linkedin</li>
                    </ul>
                </div>
            </div>
            <p style="text-align:center">© 2023 - Bản quyền thuộc về ShoesStoreAPI</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
