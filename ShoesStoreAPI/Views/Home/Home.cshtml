@model ShoesStoreAPI.Models.Home
@{
    var itemList = Model.listProducts;
}
@for (int i = 0; i <= Model.rowCount; i++)
{
    <div class="r">
        @for (int j = 0; j < Model.colCount; j++)
        {
            @if (i == Model.rowCount && j == Model.lastColIndex)
            {
                break;
            }
            <div class="col-sm-3 mx-1">
                <div class="shoes">
                    <a style="text-decoration: none; color: black;" href="/Home/Detail?id=@itemList[i * Model.colCount + j].Id">
                        <div id="@itemList[i * Model.colCount + j].Id">
                            <img src="@itemList[i * Model.colCount + j].HinhAnh" style="width: 250px; height: 250px;" />
                            <p style="text-align:center;">@itemList[i * Model.colCount + j].Ten</p>
                            <table class="shoes-info" style="width:100%;">
                                <tr>
                                    <td style="text-align: left;">Hiện có: @itemList[i * Model.colCount + j].TonKho</td>
                                    <td style="text-align: right;">@itemList[i * Model.colCount + j].Gia đ</td>
                                </tr>
                                <tr>
                                    <td style="text-align: left;">Nhãn hiệu: @itemList[i * Model.colCount + j].NhanHieu</td>
                                </tr>
                            </table>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
}
<style>
    .r {
        bs-gutter-x: 1.5rem;
        bs-gutter-y: 0;
        display: flex;
        margin-top: calc(var(--bs-gutter-y) * -1);
        margin-right: calc(var(--bs-gutter-x) * -.5);
        margin-left: calc(var(--bs-gutter-x) * -.5);
    }

    .shoes {
        text-align: center;
        background-color: gainsboro;
        margin-bottom: 10px;
        border: 2px solid #000;
        padding: 10px;
        height: 400px;
        width: 300px;
    }

    .shoes-info {
        margin-bottom: 0px;
    }
</style>
